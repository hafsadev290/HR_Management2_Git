@model IEnumerable<HR_Management2.Models.Employee>
@inject Microsoft.AspNetCore.Identity.SignInManager<HR_Management2.Models.AppUser> signInManager

@if (signInManager.IsSignedIn(User) && User.IsInRole("Admin"))
{
    <div class="container p-3">
        <div class="row pt-4">
            <div class="col-6">
                <h2 class="text-primary">Employees</h2>
            </div>
            <div class="col-6 text-right">
                <a asp-controller="Employee" asp-action="Create" class="btn btn-dark">Add a new employee</a>
            </div>
        </div>
        @if (Model.Count() > 0)
        {
            <table class="table table-bordered table-striped" style="width:100%">
                <tr>
                    <th>First name</th>
                    <th>Last name</th>
                    <th>Joined</th>
                    <th>Actions</th>

                </tr>
                @foreach (var employee in Model)
                {
                    <tr>

                        <td width="20%">@employee.FirstName</td>
                        <td width="20%">@employee.LastName</td>
                        <td width="25%">@employee.StartDate.ToShortDateString()</td>
                        <td width="30%">
                            <div class="w-100 btn-group" role="group">
                                <a asp-controller="Employee" asp-action="Update" asp-route-Id="@employee.Id"
                                   class="btn btn-primary">Update</a>
                                <a asp-controller="Employee" asp-action="ListAbsences" asp-route-Id="@employee.Id"
                                   class="btn btn-warning">Absences</a>
                            </div>
                        </td>
                    </tr>
                }
            </table>
        }
                else
                {
                    <p class="text-danger">No employees yet.</p>
                }
    </div>
}