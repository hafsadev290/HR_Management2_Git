@model IEnumerable<HR_Management2.Models.Absence>
@inject Microsoft.AspNetCore.Identity.SignInManager<HR_Management2.Models.AppUser> signInManager

@if (signInManager.IsSignedIn(User) && User.IsInRole("Admin"))
{
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">List of Absences of selected employee</h2>
        </div>

    </div>
    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <tr>
                <th>Start Date</th>
                <th>Duration</th>
                <th>Absence Type</th>
                <th>Employee</th>
                <th>Actions</th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>

                    <td width="20%">@item.StartDate.ToShortDateString()</td>
                    <td width="15%">@item.Duration</td>
                    <td width="20%">@item.AbsenceType.AbsenceName</td>
                    <td width="20%">@item.Employee.LastName</td>
                    <td width="30%">
                        <div class="w-100 btn-group" role="group">
                            <a asp-controller="Absence" asp-action="Update" asp-route-Id="@item.Id"
                               class="btn btn-primary">Update</a>
                            <a asp-controller="Absence" asp-action="Delete" asp-route-Id="@item.Id"
                               class="btn btn-danger">Delete</a>
                        </div>
                    </td>
                </tr>
            }
        </table>
    }
    else
    {
        <p class="text-danger">No absences recorded for this employee.</p>
    }
</div>
}