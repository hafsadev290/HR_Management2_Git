@inject Microsoft.AspNetCore.Identity.SignInManager<HR_Management2.Models.AppUser> signInManager

@if (signInManager.IsSignedIn(User))
{
<form method="post" id="logoutForm" asp-action="Logout" asp-controller="Account">
    <ul class="nav navbar-nav">
        <li>Hello, @User.Identity.Name !</li>
        <li><a href="javascript:document.getElementById('logoutForm').submit()">Log out</a></li>
    </ul>
    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
        <ul class="navbar-nav flex-grow-1">
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
            </li>

            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="" asp-controller="Employee" asp-action="Index">Employees</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="" asp-controller="Absence" asp-action="Index">Absences</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="" asp-controller="AbsenceType" asp-action="Index">Absence Types</a>
            </li>
        </ul>
    </div>
</form>

}
else
{
    <ul class="nav navbar-nav">
        <li class="nav-item">@Html.ActionLink("Sign Up", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
        <li class="nav-item">@Html.ActionLink("Login", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
    </ul>
}