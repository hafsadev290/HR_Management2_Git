@model HR_Management2.Models.Absence

<form method="post" asp-action="DeletePost">
    <!--to trigger the server validation-->
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input asp-for="Id" hidden />
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-black-50 pl-3">Delete An Absence</h2>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="AbsenceType"></label>
                    </div>
                    <div class="col-4">
                        <label asp-for="Duration"></label>
                    </div>
                    <div class="col-4">
                        <label asp-for="StartDate"></label>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <input asp-for="AbsenceType" disabled class="form-control" />

                    </div>
                    <div class="col-4">
                        <input asp-for="Duration" disabled class="form-control" />

                    </div>
                    <div class="col-4">
                        <input asp-for="StartDate" disabled class="form-control" />

                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-8 offset-2 row">
                        <div class="col">
                            <input type="submit" class="btn btn-danger w-75" value="Delete" />
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-danger w-75">Back</a>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</form>